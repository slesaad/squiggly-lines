---
import { SOCIAL, getBase } from '../consts';
import ThemeToggle from './ThemeToggle.astro';
const base = getBase();
const path = Astro.url.pathname;
const isActive = (segment: string) => path.startsWith(`${base}${segment}`);
---

<div class="sidebar">
  <div>
    <a href={base}><div class="profile-image" role="img" aria-label="Profile"></div></a>
  </div>
  <div class="social">
    <a href={SOCIAL.instagram}><img class="icon insta" src={`${base}images/icons/insta.png`} alt="instagram" /></a>
    <a href={SOCIAL.github}><img class="icon github" src={`${base}images/icons/github.png`} alt="github" /></a>
    <a href={SOCIAL.website}><img class="icon website" src={`${base}images/icons/web.png`} alt="website" /></a>
    <a href={SOCIAL.email}><img class="icon email" src={`${base}images/icons/email.png`} alt="email" /></a>
    <a href={SOCIAL.linkedin}><img class="icon linkedin" src={`${base}images/icons/linkedin.png`} alt="linkedin" /></a>
  </div>
  <div class="menu">
    <a href={`${base}blog`} class:list={["all", { active: isActive("blog") }]}>all</a>
    <a href={`${base}art`} class:list={[{ active: isActive("art") }]}>art</a>
    <a href={`${base}dev`} class:list={[{ active: isActive("dev") }]}>dev</a>
    <a href={`${base}make`} class:list={[{ active: isActive("make") }]}>make</a>
    <a href={`${base}misc`} class:list={[{ active: isActive("misc") }]}>misc</a>
  </div>
  <ThemeToggle />
</div>
