---
import BaseLayout from './BaseLayout.astro';
import '../styles/blog.scss';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
const { title, date, fullscreen } = post.data;

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<BaseLayout title={title} fullscreen={fullscreen}>
  <a class="back-link" href="javascript:history.back()">&lt;&lt; go back</a>
  <article class="post">
    <h1>{title}</h1>
    <div class="entry">
      <slot />
    </div>
    <div class="date">Written on {formatDate(date)}</div>
  </article>
</BaseLayout>
