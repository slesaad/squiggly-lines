---
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.scss';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Sidebar from '../components/Sidebar.astro';
import { SITE, getBase, CATEGORIES } from '../consts';

interface Props {
  title?: string;
  category?: string;
  collapsed?: boolean;
  fullscreen?: boolean;
}

const { title, category, collapsed = false, fullscreen = false } = Astro.props;
const base = getBase();

// Determine if this page should have collapsed layout
const path = Astro.url.pathname;
const isPostPage = path.includes('/posts/');
const shouldCollapse = !fullscreen && (collapsed || isPostPage);
---

<!doctype html>
<html lang="en-US" style={`--display-picture-light: url("${base}images/cool.png"); --display-picture-dark: url("${base}images/sleepy.png");`}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Yomogi&family=Comforter+Brush&family=Mansalva&family=Schoolbell&family=Comic+Neue&display=swap"
      rel="stylesheet"
    />
    <title>{title ?? SITE.name}</title>
    <ViewTransitions />
    <script is:inline>
      (function() {
        const saved = localStorage.getItem('theme');
        if (saved) {
          document.documentElement.setAttribute('data-theme', saved);
        } else if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          document.documentElement.setAttribute('data-theme', 'dark');
        }
      })();

      document.addEventListener('astro:before-swap', (e) => {
        const saved = localStorage.getItem('theme');
        if (saved) {
          e.newDocument.documentElement.setAttribute('data-theme', saved);
        }
      });
    </script>
  </head>
  <body class:list={[{ 'layout-collapsed': shouldCollapse, 'layout-fullscreen': fullscreen }]}>
    {!fullscreen && <Header />}
    <div class="main">
      {!fullscreen && <Sidebar />}
      <div class="content-wrapper">
        {category && <span class="category-tag">#{category.toLowerCase()}</span>}
        <div class="content">
          <slot />
        </div>
      </div>
    </div>
    {!fullscreen && <Footer />}
  </body>
</html>
